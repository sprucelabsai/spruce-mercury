{
	"name": "@sprucelabs/mercury",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"version": "10.2.0",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"description": "The simple way to interact with the Spruce Experience Platform",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/workspace.sprucebot-skills-kit",
	"bugs": {
		"url": "https://github.com/sprucelabsai/workspace.sprucebot-skills-kit/issues"
	},
	"scripts": {
		"build": "npm run clean && concurrently \"npm run build:node\" \"npm run build:umd\"",
		"build:node": "tsc",
		"build:browser": "tsc --project tsconfig.browser.json",
		"build:umd": "rollup -c rollup.config.js",
		"watch": "chokidar 'src/**/*.(js|jsx|ts|tsx)' index.ts -c 'npm run build'",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint:fix": "eslint --fix '**/*.ts'",
		"test": "jest",
		"release": "semantic-release"
	},
	"dependencies": {
		"@sprucelabs/log": "^10.2.1",
		"@sprucelabs/path-resolver": "^1.2.1",
		"@sprucelabs/schema": "^1.28.0",
		"debug": "^4.1.1",
		"randombytes": "^2.1.0",
		"rollup": "^1.27.14",
		"socket.io-client": "^2.3.0",
		"superagent": "^5.1.2"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^11.0.0",
		"@rollup/plugin-json": "^4.0.1",
		"@rollup/plugin-node-resolve": "^6.0.0",
		"@rollup/plugin-typescript": "^2.0.1",
		"@sprucelabs/semantic-release": "^3.0.4",
		"@sprucelabs/test": "^2.6.0",
		"@types/chai": "^4.2.3",
		"@types/debug": "^4.1.5",
		"@types/faker": "^4.1.11",
		"@types/node": "^14.0.1",
		"@types/socket.io-client": "^1.4.32",
		"add": "^2.0.6",
		"chai": "^4.2.0",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.0.2",
		"eslint": "^5",
		"eslint-config-spruce": "^10.4.0",
		"faker": "^4.1.0",
		"jest": "^26.0.1",
		"prettier": "^1.19",
		"rollup": "^1.27.14",
		"rollup-plugin-node-builtins": "^2.1.2",
		"rollup-plugin-node-globals": "^1.4.0",
		"rollup-plugin-replace": "^2.2.0",
		"ts-jest": "^26.0.0",
		"ts-node": "^8.10.1",
		"typescript": "^3.9.2"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "current"
					}
				}
			],
			"@babel/preset-typescript"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"cache": false,
		"maxWorkers": 4,
		"testTimeout": 30000,
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/build/",
			"<rootDir>/node_modules/"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/.spruce/$1",
			"^#spruce:schema/(.*)": "<rootDir>/node_modules/@sprucelabs/schema/build/$1"
		}
	}
}