{
	"name": "@sprucelabs/mercury",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"version": "10.0.1",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"description": "The simple way to interact with the Spruce Experience Platform",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/workspace.sprucebot-skills-kit",
	"bugs": {
		"url": "https://github.com/sprucelabsai/workspace.sprucebot-skills-kit/issues"
	},
	"scripts": {
		"#build": "npm run clean && npm run build:node && npm run build:umd",
		"build": "npm run clean && concurrently \"npm run build:node\" \"npm run build:umd\"",
		"build:node": "tsc | true",
		"build:browser": "tsc --project tsconfig.browser.json",
		"build:umd": "rollup -c rollup.config.js",
		"#build:umd": "rollup ./build/index.js --format umd --name Mercury --sourceMap --output build/umd/mercury.js",
		"watch": "chokidar 'src/**/*.(js|jsx|ts|tsx)' -c 'npm run build'",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint:fix": "eslint --fix '**/*.ts'",
		"test": "mocha -r ts-node/register/transpile-only --exit 'tests/**/*Tests*'",
		"release": "semantic-release"
	},
	"dependencies": {
		"debug": "^4.1.1",
		"randombytes": "^2.1.0",
		"rollup": "^1.27.14",
		"socket.io-client": "^2.3.0",
		"superagent": "^5.1.2",
		"uuid": "^3.3.3"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^11.0.0",
		"@rollup/plugin-json": "^4.0.1",
		"@rollup/plugin-node-resolve": "^6.0.0",
		"@rollup/plugin-typescript": "^2.0.1",
		"@sprucelabs/semantic-release": "^3.0.4",
		"@types/chai": "^4.2.3",
		"@types/debug": "^4.1.5",
		"@types/faker": "^4.1.11",
		"@types/mocha": "^5.2.7",
		"@types/socket.io-client": "^1.4.32",
		"add": "^2.0.6",
		"chai": "^4.2.0",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.0.2",
		"eslint": "^5",
		"eslint-config-spruce": "^10.0.0",
		"faker": "^4.1.0",
		"mocha": "^5.2.0",
		"prettier": "^1.19",
		"rollup": "^1.27.14",
		"rollup-plugin-node-builtins": "^2.1.2",
		"rollup-plugin-node-globals": "^1.4.0",
		"rollup-plugin-replace": "^2.2.0",
		"ts-node": "^8.8.1",
		"typescript": "^3.8"
	}
}
