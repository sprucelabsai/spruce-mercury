{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2017",
    "lib": [
      "ES2017",
      "DOM"
    ],
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "#spruce/*": [
        ".spruce/*"
      ],
      "#spruce:schema/*": [
        ".spruce/schemas/*"
      ]
    }
  },
  "include": [
    "./*.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "**/node_modules/*",
    "build/*"
  ]
}